<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        app:defaultValue="@string/settings_order_by_default"
        app:entries="@array/settings_order_by_labels"
        app:entryValues="@array/settings_order_by_values"
        app:key="@string/settings_order_by_key"
        android:icon="@drawable/ic_baseline_sort_24"
        app:title="@string/settings_order_by_label" />

    <EditTextPreference
        android:selectAllOnFocus="true"
        app:defaultValue="@string/settings_min_magnitude_default"
        app:key="@string/settings_min_magnitude_key"
        android:icon="@drawable/ic_baseline_indeterminate_check_box_24"
        app:title="@string/settings_min_magnitude_label" />
</PreferenceScreen>